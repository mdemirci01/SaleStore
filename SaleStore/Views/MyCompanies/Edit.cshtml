@model SaleStore.Models.Company

@{
    ViewData["Title"] = "Firma Düzenle";
}

<br />
<div class="row headerOffset" style="padding-top:80px;padding-left:30px;padding-right:30px;">
    <div class="col-md-12 col-xs-11 col-sm-11">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">           
            </div>
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="form-horizontal">
                    <br />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>                                
                    <div class="form-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.CreateDate)
                        @Html.HiddenFor(model => model.CreatedBy)
                        @Html.HiddenFor(model => model.UpdateDate)
                        @Html.HiddenFor(model => model.UpdatedBy)
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label asp-for="Name" class="col-md-2 control-label"></label>
                            <div class="col-md-8">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <input type="hidden" asp-for="Logo" tabindex="1" value="@Model.Logo" />

                        <div class="form-group">
                            <label asp-for="Address" class="col-md-2 control-label"></label>
                            <div class="col-md-8">
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone" class="col-md-2 control-label"></label>
                            <div class="col-md-8">
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        @if (Model.Logo != null)
                        {
                            <div class="col-md-offset-2 col-md-10">
                                <img style="width:80px;margin-bottom:10px;margin-left:-10px;" class="img-thumbnail img-responsive" src="/@Html.DisplayFor(model => model.Logo)" />
                            </div>
                        }

                        <div class="form-group">
                                <label asp-for="Logo" class="col-md-2 control-label"></label>
                                <div class="col-md-8">
                                    <input asp-for="Logo" type="file" name="uploadFile" class="form-control" />
                                    <div class="clearfix margin-top-10">
                                        <span class="label label-success">UYARI !</span> Dosyanın uzantısı <strong>.jpg, .gif</strong> ya da <strong>.png</strong> olmalıdır.
                                    </div>
                                    <span asp-validation-for="Logo" class="text-danger"></span>
                                </div>
                            </div>

                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Kaydet" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>          
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
