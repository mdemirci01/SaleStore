@model SaleStore.Models.Advertisement

@{
    ViewData["Title"] = "Reklam Ekle";
}

<br />
<div class="row">
    <div class="col-md-12 col-xs-11 col-sm-11">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">

                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> Reklam Ekle</span>

                </div>

            </div>
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-horizontal">

                    <br />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="portlet-body form">
                        <div class="form-body">
                            <div class="form-group">
                                <label asp-for="Name" class="col-md-2 control-label"></label>
                                <div class="col-md-8">
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="advType" class="col-md-2 control-label"></label>
                                <div class="col-md-8">
                                    <select asp-for="advType" class="form-control">
                                        <option value="1">Resim</option>
                                        <option value="2">Text</option>
                                        <option value="3">HTML</option>
                                    </select>
                                    <span asp-validation-for="advType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Title" class="col-md-2 control-label"></label>
                                <div class="col-md-8">
                                    <input asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="col-md-2 control-label"></label>
                                <div class="col-md-8">
                                    <input asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="form-group">
                                <label asp-for="HTMLCodes" class="col-md-2 control-label"></label>
                                <div class="col-md-8">
                                    <input asp-for="HTMLCodes" class="form-control" />
                                    <span asp-validation-for="HTMLCodes" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group ">
                                <label asp-for="Image" class="col-md-2 control-label"></label>
                                <div class="col-md-8">
                                    <div class="fileinput fileinput-new" data-provides="fileinput">
                                        <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 300px; height: 150px;"> </div>
                                        <div>
                                            <span class="btn red btn-outline btn-file">
                                                <span class="fileinput-new"> Resim Seç </span>
                                                <span class="fileinput-exists"> Değiştir </span>
                                                <input title="uploadFile" type="file" name="uploadFile" />
                                            </span>
                                            <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> Kaldır </a>
                                        </div>
                                    </div>
                                    <div class="clearfix margin-top-10">
                                        <span class="label label-success">NOT!</span> Resim Uzantısı .jpg .jpeg yada .png olmalıdır..
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="URLpath" class="col-md-2 control-label"></label>
                                <div class="col-md-8">
                                    <input asp-for="URLpath" class="form-control" />
                                    <span asp-validation-for="URLpath" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="HomePageCampaigns" class="control-label col-md-2"></label>
                                <div class="col-md-8 icheck-inline">
                                    <input asp-for="HomePageCampaigns" class="form-control icheckbox_minimal-blue" />
                                    <span asp-validation-for="HomePageCampaigns" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="HomePageProducts" class="control-label col-md-2"></label>
                                <div class="col-md-8 icheck-inline">
                                    <input asp-for="HomePageProducts" class="form-control icheckbox_minimal-blue" />
                                    <span asp-validation-for="HomePageProducts" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="ProductsPage" class="control-label col-md-2"></label>
                                <div class="col-md-8 icheck-inline">
                                    <input asp-for="ProductsPage" class="form-control icheckbox_minimal-blue" />
                                    <span asp-validation-for="ProductsPage" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="CampaignPage" class="control-label col-md-2"></label>
                                <div class="col-md-8 icheck-inline">
                                    <input asp-for="CampaignPage" class="form-control icheckbox_minimal-blue" />
                                    <span asp-validation-for="CampaignPage" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Ispublished" class="control-label col-md-2"></label>
                                <div class="col-md-8 icheck-inline">
                                    <input asp-for="Ispublished" class="form-control icheckbox_minimal-blue" />
                                    <span asp-validation-for="Ispublished" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="AdvertiseStartDate" class="col-md-2 control-label"></label>
                                <div class="col-md-8">
                                    <input asp-for="AdvertiseStartDate" class="form-control" />
                                    <span asp-validation-for="AdvertiseStartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="AdvertiseEndDate" class="col-md-2 control-label"></label>
                                <div class="col-md-8">
                                    <input asp-for="AdvertiseEndDate" class="form-control" />
                                    <span asp-validation-for="AdvertiseEndDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ClickRate" class="col-md-2 control-label"></label>
                                <div class="col-md-8">
                                    <input asp-for="ClickRate" class="form-control" />
                                    <span asp-validation-for="ClickRate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="PositionDegree" class="col-md-2 control-label"></label>
                                <div class="col-md-8">
                                    <input asp-for="PositionDegree" class="form-control" />
                                    <span asp-validation-for="PositionDegree" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-8">
                                    <input type="submit" value="Kaydet" class="btn btn-success" />
                                    <a asp-action="Index" class="btn default btn-outline">Listeye Geri Dön</a>
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
