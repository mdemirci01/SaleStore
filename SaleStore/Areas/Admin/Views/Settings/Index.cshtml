@model Setting

@{
    ViewData["Title"] = "Index";
}

<br />
<div class="row">
    <div class="col-md-12 col-xs-11 col-sm-11">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">

                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> Ayarlar</span>

                </div>

            </div>



            @if (!String.IsNullOrEmpty(ViewBag.Messagesettings))
            {
                <div class="alert alert-success">@ViewBag.Messagesettings</div>
            }


            <form asp-area="Admin" role="form" asp-controller="Settings" asp-action="Index" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div class="form-horizontal">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <input type="hidden" asp-for="Logo" tabindex="1" value="@Model.Logo" />
                    <div class="form-group ">
                        <label asp-for="Logo" class="col-md-2 control-label"></label>
                        <div class="col-md-9">
                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                <div value="@Model.Logo" class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;"><img src="@Model.Logo"> </div>
                                <div>
                                    <span class="btn red btn-outline btn-file">
                                        <span class="fileinput-new"> Select image </span>
                                        <span class="fileinput-exists"> Change </span>
                                        <input title="logoUpload" type="file" name="logoUpload" />
                                    </span>
                                    <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                </div>
                            </div>
                            <div class="clearfix margin-top-10">
                                <span class="label label-success">NOTE!</span> Resim Uzantısı .jpg .jpeg yada .png olmalıdır..
                            </div>
                        </div>
                    </div>

              

                    <div class="form-group">
                        <label asp-for="SeoTitle" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <input asp-for="SeoTitle" class="form-control" />
                            <span asp-validation-for="SeoTitle" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="SeoDescription" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <textarea asp-for="SeoDescription" class="form-control"></textarea>
                            <span asp-validation-for="SeoDescription" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="SeoKeywords" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <textarea asp-for="SeoKeywords" class="form-control"></textarea>
                            <span asp-validation-for="SeoKeywords" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="About" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <textarea asp-for="About" class="form-control"></textarea>
                            <span asp-validation-for="About" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Vision" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <input asp-for="Vision" class="form-control" />
                            <span asp-validation-for="Vision" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Mission" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <input asp-for="Mission" class="form-control" />
                            <span asp-validation-for="Mission" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Strategy" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <input asp-for="Strategy" class="form-control" />
                            <span asp-validation-for="Strategy" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Mail" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <input asp-for="Mail" class="form-control" />
                            <span asp-validation-for="Mail" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group">
                        <label asp-for="Facebook" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <input asp-for="Facebook" class="form-control" />
                            <span asp-validation-for="Facebook" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Twitter" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <input asp-for="Twitter" class="form-control" />
                            <span asp-validation-for="Twitter" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="LinkedIn" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <input asp-for="LinkedIn" class="form-control" />
                            <span asp-validation-for="LinkedIn" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-8">
                            <input type="submit" value="Kaydet" class="btn btn-success" />
                            <a controller="Dashboard" asp-action="Index" class="btn default btn-outline">Listeye Geri Dön</a>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
