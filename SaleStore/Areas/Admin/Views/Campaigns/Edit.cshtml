@model SaleStore.Models.Campaign

@{
    ViewData["Title"] = "Kampanya Düzenle";
}
<br />
<div class="row">
    <div class="col-md-12 col-xs-11 col-sm-11">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">

                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> Kampanya Düzenle</span>

                </div>

            </div>

            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="form-horizontal">
                    <br />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.CreateDate)
                        @Html.HiddenFor(model => model.CreatedBy)
                        @Html.HiddenFor(model => model.UpdateDate)
                        @Html.HiddenFor(model => model.UpdatedBy)
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Slogan" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <input asp-for="Slogan" class="form-control" />
                            <span asp-validation-for="Slogan" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label col-md-2"></label>
                        <div class="col-md-8">
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="CampaignStartDate" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <input asp-for="CampaignStartDate" class="form-control" />
                            <span asp-validation-for="CampaignStartDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="CampaignEndDate" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <input asp-for="CampaignEndDate" class="form-control" />
                            <span asp-validation-for="CampaignEndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <input type="hidden" asp-for="Image" tabindex="1" value="@Model.Image" />
                    
                    <div class="form-group ">
                        <label asp-for="Image" class="col-md-2 control-label"></label>
                        <div class="col-md-9">
                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                <div value="/@Model.Image" class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;"><img src="/@Model.Image"> </div>
                                <div>
                                    <span class="btn red btn-outline btn-file">
                                        <span class="fileinput-new"> Resim Seç</span>
                                        <span class="fileinput-exists"> Değiştir </span>
                                        <input asp-for="Image" type="file" name="uploadFile" />
                                    </span>
                                    <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> Kaldır </a>
                                </div>
                            </div>
                            <div class="clearfix margin-top-10">
                                <span class="label label-success">NOT!</span> Resim Uzantısı .jpg .jpeg yada .png olmalıdır..
                            </div>
                        </div>
                    </div>
                             
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="CompanyId" class="col-md-2 control-label">Firma</label>
                        <div class="col-md-8">
                            <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                        </div>
                    </div>


                    <div class="form-group">
                        <label asp-for="IsPublish" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <input asp-for="IsPublish" class="form-control icheckbox_minimal-blue" />
                            <span asp-validation-for="IsPublish" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="SelectedCampaign" class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <input asp-for="SelectedCampaign" class="form-control icheckbox_minimal-blue" />
                            <span asp-validation-for="SelectedCampaign" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-8">
                            <input type="submit" value="Kaydet" class="btn btn-success" />
                            <a asp-action="Index" class="btn default btn-outline">Listeye Geri Dön</a>
                        </div>
                    </div>
                </div>

            </form>
            <div>
                
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
