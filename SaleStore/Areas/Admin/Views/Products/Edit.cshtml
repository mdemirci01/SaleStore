@model SaleStore.Models.Product

@{
    ViewData["Title"] = "Ürün Düzenle";
}

<br />
<div class="row">
    <div class="col-md-12 col-xs-11 col-sm-11">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">

                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> Ürün Düzenle</span>

                </div>

            </div>


            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="form-horizontal">

                    <br />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.CreateDate)
                        @Html.HiddenFor(model => model.CreatedBy)
                        @Html.HiddenFor(model => model.UpdateDate)
                        @Html.HiddenFor(model => model.UpdatedBy)
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label asp-for="Name" class="col-md-2 control-label"></label>
                            <div class="col-md-8">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Details" class="col-md-2 control-label"></label>
                            <div class="col-md-8">
                                <input asp-for="Details" class="form-control" />
                                <span asp-validation-for="Details" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="UnitPrice" class="col-md-2 control-label"></label>
                            <div class="col-md-8">
                                <input asp-for="UnitPrice" class="form-control" />
                                <span asp-validation-for="UnitPrice" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="SalePrice" class="col-md-2 control-label"></label>
                            <div class="col-md-8">
                                <input asp-for="SalePrice" class="form-control" />
                                <span asp-validation-for="SalePrice" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="SaleStarthDate" class="col-md-2 control-label"></label>
                            <div class="col-md-8">
                                <input asp-for="SaleStarthDate" class="form-control" />
                                <span asp-validation-for="SaleStarthDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="SaleEndDate" class="col-md-2 control-label"></label>
                            <div class="col-md-8">
                                <input asp-for="SaleEndDate" class="form-control" />
                                <span asp-validation-for="SaleEndDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryId" class="control-label col-md-2"></label>
                            <div class="col-md-8">
                                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <input type="hidden" asp-for="ProductImage" tabindex="1" value="@Model.ProductImage" />

                        <div class="form-group ">
                            <label asp-for="ProductImage" class="col-md-2 control-label"></label>
                            <div class="col-md-9">
                                <div class="fileinput fileinput-new" data-provides="fileinput">
                                    <div value="/@Model.ProductImage" class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;"><img src="/@Model.ProductImage"> </div>
                                    <div>
                                        <span class="btn red btn-outline btn-file">
                                            <span class="fileinput-new"> Resim Seç </span>
                                            <span class="fileinput-exists"> Değiştir </span>
                                            <input asp-for="ProductImage" type="file" name="uploadFile" />
                                        </span>
                                        <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> Kaldır </a>
                                    </div>
                                </div>
                                <div class="clearfix margin-top-10">
                                    <span class="label label-success">NOT!</span> Resim Uzantısı .jpg .jpeg yada .png olmalıdır..
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="CompanyId" class="control-label col-md-2"></label>
                            <div class="col-md-8">
                                <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                                <span asp-validation-for="CompanyId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="IsPublish" class="control-label col-md-2"></label>
                            <div class="col-md-8">
                                <input asp-for="IsPublish" class="form-control  icheckbox_minimal-blue" />
                                <span asp-validation-for="IsPublish" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="SelectedProduct" class="control-label col-md-2"></label>
                            <div class="col-md-8">
                                <input asp-for="SelectedProduct" class="form-control  icheckbox_minimal-blue" />
                                <span asp-validation-for="SelectedProduct" class="text-danger"></span>
                            </div>
                        </div>

                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-8">
                                <input type="submit" value="Kaydet" class="btn btn-success" />
                                <a asp-action="Index" class="btn default btn-outline">Listeye Geri Dön</a>
                            </div>
                        </div>
                    </div>
            </form>         
        </div>
    </div>
</div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
