@model SaleStore.Models.Product

@{
    ViewData["Title"] = "Ürün Sil";
}
<br />
<div class="row">
    <div class="col-md-12 col-xs-11 col-sm-11">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">

                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> Ürün Sil</span>
                    <h3>Silmek istediğinize emin misiniz?</h3>
                </div>

            </div>
            <form asp-action="Delete" enctype="multipart/form-data" asp-route-id="@Model.Id">

              
                <br />
                <div class="portlet-body form">
                    <div class="form-body">
                        <div class="form-group">
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.ProductImage)
                                </dt>
                                <dd>
                                    <img style="width:80px;" class="img-thumbnail img-responsive" src="/@Html.DisplayFor(model => model.ProductImage)" />

                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Name)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Name)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Details)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Details)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.UnitPrice)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.UnitPrice)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.SalePrice)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.SalePrice)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.SaleStarthDate)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.SaleStarthDate)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.SaleEndDate)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.SaleEndDate)
                                </dd>
                              
                                <input type="hidden" asp-for="Id" />
                                <dt>
                                    @Html.DisplayNameFor(model => model.CreateDate)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.CreateDate)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.CreatedBy)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.CreatedBy)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.UpdatedBy)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.UpdatedBy)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.UpdateDate)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.UpdateDate)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Category.Name)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Category.Name)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Company.Name)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Company.Name)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.IsPublish)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.IsPublish)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.SelectedProduct)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.SelectedProduct)
                                </dd>
                            </dl>


                            <div class="form-actions no-color">
                                <input type="submit" value="Sil" class="btn btn-danger" /> 
                                <a asp-action="Index" class="btn default btn-outline">Listeye Geri Dön</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
